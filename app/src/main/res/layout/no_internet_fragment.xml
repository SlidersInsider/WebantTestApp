<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.fragments.NoInternetFragment">

    <ImageView
        android:id="@+id/noInternetImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/no_internet_image"/>

    <TextView
        android:id="@+id/noInternetText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_internet_text1"

        style="@style/StyleNoInternetTextView1"
        app:layout_constraintEnd_toEndOf="@+id/noInternetImage"
        app:layout_constraintStart_toStartOf="@+id/noInternetImage"
        app:layout_constraintTop_toBottomOf="@+id/noInternetImage" />

    <TextView
        android:id="@+id/noInternetText2"
        style="@style/StyleNoInternetTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/no_internet_text2"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/noInternetImage"
        app:layout_constraintStart_toStartOf="@+id/noInternetImage"
        app:layout_constraintTop_toBottomOf="@+id/noInternetText1" />

</androidx.constraintlayout.widget.ConstraintLayout>